---
import BTNPrimary from "./BTNPrimary.astro"
---

<section>
    <div class="raadgivning-container">
        <div class="raadgivning-text">
            <div class="raadgivning-header">
                <h3 class="h3-display">Brug for rådgivning til din rejse?</h3>
                <p class="paragraph-small">Udfyld formularen, og vi kontakter dig.</p>
            </div>
            
            <form action="">
                <div class="div1">
                    <input type="text" id="fname" name="fname" class="form-input paragraph-medium" placeholder="Fornavn *" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Fornavn *'">
                    <label class="formlabel" for="fname"></label>
                </div>

                <div class="div2">
                    <input type="text" id="lname" name="lname" class="form-input paragraph-medium" placeholder="Efternavn *" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Efternavn *'">
                    <label class="formlabel" for="lname"></label>
                </div>

                <div class="div3">
                    <input type="text" id="email" name="email" class="form-input paragraph-medium" placeholder="E-mail *" onfocus="this.placeholder = ''" onblur="this.placeholder = 'E-mail *'">
                    <label class="formlabel" for="email"></label>
                </div>

                <div class="div4">
                    <input type="text" id="phone" name="phone" class="form-input paragraph-medium" placeholder="Telefon *" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Telefon *'">
                    <label class="formlabel" for="phone"></label>
                </div>

                <div class="div5">
                    <textarea id="comments" name="comments" class="form-input paragraph-medium" placeholder="Hvad kan vi hjælpe med?" maxlength="300" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Hvad kan vi hjælpe med?'"></textarea>
                    <label class="formlabel" for="comments"></label>
                    <div id="charCount">0/300</div>
                </div>

                <div class="div6">
                    <BTNPrimary data="SEND"/>
                </div>
        </form>
    </div>
    <div class="matti-img">
        <img src="../img/matti_raadgivning.png" alt="Matti" class="matti">
        <p class="category-bold">Matti Saastamoinen Binderup</p>
        <p class="paragraph-small">Stifter af Rejselyst</p>
    </div>
    </div>
</section>

<style>
    section {
        background-color: var(--surface-tertiary);
        padding: var(--space-horisontal-margin-small, 60px) var(--space-vertical-margin-small, 60px);
    }

    .raadgivning-container {
        display: flex;
        align-items: flex-start;
        gap: var(--space-vertical-margin-small);
        justify-content: center;
        flex-direction: column;
    }

    .raadgivning-header {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
    }

    .raadgivning-text {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: var(--space-horisontal-gap-large, 50px);
    }

    .form-input {
        cursor: pointer;
        outline: none;
        border: none;
        background-color: transparent;
        color: rgba(0, 0, 0, 0.50);
        border-bottom: 1px solid var(--text-form-contact-form-text-body-color);
        width: 100%;
    }

    img {
width: 100%;
height: auto;
object-fit: cover;

    }

    textarea#comments {
        resize: none;
        overflow: auto;
        height: 60px;
        max-height: 80px;
    }

    #charCount {
        color: var(--text-form-contact-form-text-body-color);
        text-align: right;
        font-family: "Be Vietnam Pro";
        font-size: 14px;
    }

    form {
        display: flex;
        flex-direction: column;
        grid-row-gap: var(--space-vertical-gap-xsmall);
        width: 100%;
    }

    .div6 {
        padding-top: var(--space-8);
    }

    @media only screen and (min-width: 992px) {
        form {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-template-rows: repeat(4, 1fr);
            grid-column-gap: 50px;
            align-items: center;
            width: 640px;
        }
        .div1 { grid-area: 1 / 1 / 2 / 2; }
        .div2 { grid-area: 1 / 2 / 2 / 3; }
        .div3 { grid-area: 2 / 1 / 3 / 2; }
        .div4 { grid-area: 2 / 2 / 3 / 3; }
        .div5 { grid-area: 3 / 1 / 4 / 3; }
        .div6 { grid-area: 4 / 1 / 5 / 3; }

        .raadgivning-container {
            display: flex;
            align-items: flex-start;
            gap: 124px;
            justify-content: center;
            flex-direction: row;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        const inputs = document.querySelectorAll('.form-input');
        const comments = document.getElementById('comments');
        const charCount = document.getElementById('charCount');

        comments.addEventListener('input', () => {
            const currentLength = comments.value.length;
            charCount.textContent = `${currentLength}/300`;
        });
    });
</script>
