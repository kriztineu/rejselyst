<script>

    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    
    gsap.registerPlugin(ScrollTrigger);
    
    gsap.from(".travel-upper-section", {
        yPercent:50,
        duration: 3,
        opacity: 0,
        stagger: 0.2,
        scrollTrigger: {
            trigger: ".travel-upper-section",
            start: "top 80%",  
            end: "bottom 70%", 
            scrub: true,
      }
    });

    gsap.from(".travel-lower-section", {
        yPercent:50,
        duration: 3,
        opacity: 0,
        stagger: 0.2,
        scrollTrigger: {
          trigger: ".travel-lower-section",
          start: "top 80%",  
            end: "bottom 70%", 
          scrub: true,
      }
    }); 

    </script>
    