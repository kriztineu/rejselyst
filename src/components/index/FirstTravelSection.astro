    .article {
        background-color: var(--surface-secondary, #FFFFE9);
        display: flex;
        padding-top: 250px;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: var(--space-horisontal-gap-xxlarge, 50px);
        padding: var(--space-horisontal-gap-xlarge, 30px) var(--space-vertical-margin-small, 60px);
    }

    .travel-upper-section {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-vertical-gap-small);
        padding-bottom: var(--space-horisontal-gap-xlarge, 30px);

    }

    .travel-lower-section {
        display: grid;
        grid-template-columns: 1fr;
        padding-bottom: 30px;
        gap: var(--space-vertical-gap-small);
        padding-top: var(--space-horisontal-gap-xlarge, 30px);
    }

    .text-btn-gap {
    display: flex;
    flex-direction: column;
    gap: var(--space-horisontal-gap-xlarge, 30px);
    justify-content: left;
    }

    .text-gap {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 8px;
        padding-top: 16px;
    }

    @media only screen and (min-width: 992px) {
        

        article {
            gap: var(--space-horisontal-gap-xxlarge, 50px);
            padding: var(--space-horisontal-gap-xlarge, 30px) var(--space-vertical-margin-small, 60px);
            background-color: var(--surface-secondary, #FFFFE9);
            padding-top: 250px;
            display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        }
        
        .travel-upper-section {
        display: flex;
       flex-direction: row;
        padding-bottom: 30px;
        gap: var(--space-horisontal-gap-xxxlarge);
        padding-bottom: var(--space-horisontal-gap-xlarge, 30px);

    }

    .content {
        display: flex;
        flex-direction: row;
        gap: var(--space-vertical-gap-small);

    }


    .travel-lower-section {
        display: flex;
       flex-direction: row;
        gap: var(--space-horisontal-gap-xxxlarge);
        padding-top: var(--space-horisontal-gap-xlarge, 30px);
    }

    .responsive1 {
  height: 350px; 
  width: 500px; 
  object-fit: cover;
}

.responsive2 {
  height: 250px; 
  width: 400px; 
  object-fit: cover;
